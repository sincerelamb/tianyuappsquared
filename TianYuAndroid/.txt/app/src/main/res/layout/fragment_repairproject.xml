<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ListView
            android:scrollbars="none"
            android:id="@+id/fragment_repairproject_lv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <TextView
            android:id="@+id/fragment_repairproject_tv_empty"
            android:text="加载中.."
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <TextView
        android:id="@+id/fragment_repairproject_tv_tatol"
        android:text="总费用:888"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/fragment_repairproject_btn_callout"
        android:gravity="center"
        android:text="邀约播出"
        android:textColor="#fff"
        android:textSize="24sp"
        android:background="@drawable/customer_callout_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>