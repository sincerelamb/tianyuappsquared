<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/clue_item_ll_left"
            android:background="@drawable/ptcustomers_layout_item_lfet_slector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:id="@+id/item_clue_first_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/clue_item_tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#6e6d6d"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/clue_item_tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#6e6d6d"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/clue_item_tv_level_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.7"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="等级:"
                    android:textColor="#6e6d6d"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/clue_item_tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:ellipsize="end"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:singleLine="true"
                    android:textColor="@color/appBlue"
                    android:textSize="16sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/clue_item_tv_lasttime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/item_clue_first_ll"
                android:layout_below="@id/item_clue_first_ll"
                android:layout_marginTop="4dp"
                android:text="最近跟踪:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clue_item_tv_lasttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/clue_item_tv_lasttime_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/clue_item_tv_lasttime_title"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clue_item_tv_nexttime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/clue_item_tv_lasttime_title"
                android:layout_below="@id/clue_item_tv_lasttime_title"
                android:layout_marginTop="4dp"
                android:text="应回访日期:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clue_item_tv_nexttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/clue_item_tv_nexttime_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/clue_item_tv_nexttime_title"
                android:textColor="@color/appBlue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clue_item_tv_lovecar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/clue_item_tv_nexttime_title"
                android:layout_below="@id/clue_item_tv_nexttime_title"
                android:layout_marginTop="4dp"
                android:text="意向车系:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clue_item_tv_lovecar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/clue_item_tv_lovecar_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/clue_item_tv_lovecar_title"
                android:textColor="@color/appBlue"
                android:textSize="12sp" />


            <TextView

                android:id="@+id/clue_item_tv_xiaoshouguwen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/clue_item_tv_lovecar_title"
                android:layout_below="@id/clue_item_tv_lovecar_title"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="电销员:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clue_item_tv_xiaoshouguwen_context"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/clue_item_tv_xiaoshouguwen_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/clue_item_tv_xiaoshouguwen_title"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/appBlue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clue_item_tv_talk_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/clue_item_tv_xiaoshouguwen_title"
                android:layout_below="@id/clue_item_tv_xiaoshouguwen_title"
                android:layout_marginTop="4dp"
                android:text="上次洽谈记录:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clue_item_tv_talk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/clue_item_tv_talk_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/clue_item_tv_talk_title"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/clue_item_iv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="centerInside"
            android:src="@mipmap/bochu_blue" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#4666" />

</LinearLayout>
