<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppSystemBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA">

        <ImageView
            android:id="@+id/activity_pushphonere_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:scaleType="centerInside"
            android:src="@drawable/back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="待上传录音列表"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/nodata"/>

        <ListView
            android:layout_below="@+id/nodata"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:id="@+id/pushlist">

        </ListView>
        <Button
            android:id="@+id/activity_pushphonere_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:gravity="center_vertical"
            android:text="全部上传"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:onClick="onClick"/>
    </RelativeLayout>

</LinearLayout>