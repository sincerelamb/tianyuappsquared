<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppSystemBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tygas.tianyu.tianyu.ui.view.activity.FpScreenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appBlue">

        <ImageView
            android:id="@+id/activtiy_fpcustomersfilter_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector"
            android:onClick="onClick"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="首保提醒查询"
            android:textColor="@color/white"
            android:textSize="@dimen/activtiy_header_text_size" />

        <ImageView
            android:id="@+id/activity_fpcustomersfilter_tv_confirm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/determination_selector"
            android:gravity="center"
            android:onClick="onClick"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2666">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/activity_fpcustomersfilter_tv_name"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="客户姓名"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/activity_fpcustomersfilter_et_name"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/appOrange"
                    android:textSize="18sp" />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#fff">
                <TextView
                    android:id="@+id/activity_fpcustomersfilter_tv_phone"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="客户电话"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/activity_fpcustomersfilter_et_phone"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:maxLength="15"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/appOrange"
                    android:textSize="18sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/activity_fpcustomersfilter_tv_fuwuguwen"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="服务顾问"
                    android:textSize="18sp" />

                <AutoCompleteTextView
                    android:id="@+id/activity_fpcustomersfilter_et_fuwuguwen"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:background="#00ffffff"
                    android:completionThreshold="1"
                    android:dropDownWidth="150dp"
                    android:dropDownHeight="200dp"
                    android:hint="请输入"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/appBlack"
                    android:textColorHint="@color/appOrange"
                    android:textSize="18sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/activity_fpcustomersfilter_tv_chepaiorchejia"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="车牌号/车架号"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/activity_fpcustomersfilter_et_chepaiorchejia"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/appOrange"
                    android:textSize="18sp" />



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/activity_fpcustomersfilter_rl_isoverdue"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="#fff">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="是否逾期"
                    android:textSize="16sp" />


                <RadioGroup
                    android:id="@+id/activity_fpcustomersfilter_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/activity_fpcustomersfilter_rb_all"
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/pingpaitexin_selector"
                        android:gravity="center_vertical"
                        android:text="全部"
                        android:textSize="10sp" />

                    <RadioButton
                        android:id="@+id/activity_fpcustomersfilter_rb_yes"
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/pingpaitexin_selector"
                        android:gravity="center_vertical"
                        android:text="是"
                        android:textSize="10sp" />

                    <RadioButton
                        android:id="@+id/activity_fpcustomersfilter_rb_no"
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="5dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/pingpaitexin_selector"
                        android:gravity="center_vertical"
                        android:text="否"
                        android:textSize="10sp" />
                </RadioGroup>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/activity_fpcustomersfilter_rl_lasttime"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="应邀约时间从"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activity_fpcustomersfilter_tv_lasttime"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_fpcustomersfilter_tv_lasttime_zhikong"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/activity_fpcustomersfilter_tv_lasttime"
                    android:gravity="center_vertical"
                    android:text="置最前"
                    android:textColor="@color/appOrange" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/activity_fpcustomersfilter_rl_nexttime"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="到"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/activity_fpcustomersfilter_tv_nexttime"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_fpcustomersfilter_tv_nexttime_zhikong"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/activity_fpcustomersfilter_tv_nexttime"
                    android:gravity="center_vertical"
                    android:text="置最后"
                    android:textColor="@color/appOrange" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2666" />
</LinearLayout>
