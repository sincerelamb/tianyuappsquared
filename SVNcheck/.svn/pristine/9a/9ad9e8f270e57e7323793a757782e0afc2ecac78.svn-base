<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppSystemBar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/login_top" />

        <ImageView
            android:id="@+id/activity_login_iv_set"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:onClick="setUrl"
            android:scaleType="centerInside"
            android:src="@mipmap/set_btn" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/login_bottom_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:scaleType="centerInside">

        <EditText
            android:id="@+id/et_zh"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_ed_layer_selector"
            android:hint="账号"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:paddingLeft="10dp"
            android:textColor="#666666"
            android:textColorHint="@color/appBlue"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_mima"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_below="@+id/et_zh"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_ed_layer_selector"
            android:gravity="center_vertical"
            android:hint="密码"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="10dp"
            android:textColor="#666666"
            android:textColorHint="@color/appBlue"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/rember_Ll"
            android:layout_width="300dp"
            android:layout_height="29dp"
            android:layout_below="@+id/et_mima"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/activity_login_cb_remenber_psw"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/issave_password_selector"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="记住密码"
                android:textColor="@color/appBlue"
                android:textSize="15sp" />

            <CheckBox
                android:layout_marginLeft="40dp"
                android:id="@+id/activity_login_cb_automatic_login"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/issave_password_selector"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="自动登录"
                android:textColor="@color/appBlue"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_below="@+id/rember_Ll"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login_selector"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="18sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="60dp"
            android:background="@mipmap/banquan"
            android:gravity="center"
            android:text="Copyright  2016 All Rights Reserved"
            android:textColor="#fff" />

    </RelativeLayout>


</LinearLayout>
