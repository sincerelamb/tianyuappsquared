<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppSystemBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cluefl_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="线索详情"
            android:textColor="@color/white"
            android:textSize="@dimen/activtiy_header_text_size" />

        <ImageView
            android:id="@+id/activity_cluedetail_iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/back_selector" />
    </RelativeLayout>

    <!-- app:tabIndicatorColor 指示器（字体下面的那一个横）显示颜色 -->
    <!-- app:tabSelectedTextColor 选中的字体颜色 -->
    <!-- app:tabTextColor 未选中的字体颜色 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cluefl_top"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/activity_cluedetail_tl_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabIndicatorColor="#66d354"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#000000"
            app:tabTextColor="#666"></android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_cluedetail_vp_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
    </LinearLayout>


    <Button
        android:id="@+id/activity_cluedetail_bt_callout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/appOrange"
        android:gravity="center"
        android:text="回访拨出"
        android:textColor="#fff"
        android:textSize="14sp" />

</RelativeLayout>