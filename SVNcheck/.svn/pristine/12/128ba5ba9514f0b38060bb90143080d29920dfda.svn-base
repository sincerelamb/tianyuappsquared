<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/AppSystemBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA">

        <ImageView
            android:id="@+id/activity_repairdetail_iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="viewOnclick"
            android:scaleType="centerInside"
            android:src="@drawable/back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="维修明细"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="#f6f0db"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/activity_repairdetail_tv_projectdetail"
                    android:text="维修项目明细"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_repairdetail_tv_projectdetail_tatol"
                    android:textColor="#fa9006"
                    android:textSize="20sp"
                    android:text="474.00"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_alignBottom="@id/activity_repairdetail_tv_projectdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_alignBottom="@id/activity_repairdetail_tv_projectdetail"
                    android:text="工时费合计:"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_toLeftOf="@id/activity_repairdetail_tv_projectdetail_tatol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:background="#66d354"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_below="@id/activity_repairdetail_tv_projectdetail"
                    android:layout_height="4dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.tygas.tianyu.tianyu.ui.view.customview.ListViewForScrollView
                    android:id="@+id/activity_repairdetail_lv_itemsproject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.tygas.tianyu.tianyu.ui.view.customview.ListViewForScrollView>
                <TextView
                    android:id="@+id/activity_repairdetail_tv_itemsproject_empty"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <RelativeLayout
                android:background="#f6f0db"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/activity_repairdetail_tv_partdetail"
                    android:text="配件明细"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_repairdetail_tv_partdetail_tatol"
                    android:textColor="#fa9006"
                    android:textSize="20sp"
                    android:text="474.00"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_alignBottom="@id/activity_repairdetail_tv_partdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_alignBottom="@id/activity_repairdetail_tv_partdetail"
                    android:text="配件金额合计:"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_toLeftOf="@id/activity_repairdetail_tv_partdetail_tatol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:background="#66d354"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_below="@id/activity_repairdetail_tv_partdetail"
                    android:layout_height="4dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.tygas.tianyu.tianyu.ui.view.customview.ListViewForScrollView
                    android:id="@+id/activity_repairdetail_lv_partdetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.tygas.tianyu.tianyu.ui.view.customview.ListViewForScrollView>
                <TextView
                    android:id="@+id/activity_repairdetail_tv_partdetail_empty"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <!-- app:tabIndicatorColor 指示器（字体下面的那一个横）显示颜色 -->
    <!-- app:tabSelectedTextColor 选中的字体颜色 -->
    <!-- app:tabTextColor 未选中的字体颜色 -->

    <!--<android.support.design.widget.TabLayout
        android:id="@+id/activity_repairdetail_tl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#66d354"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#000000"
        app:tabTextColor="#666"
        >
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_repairdetail_vp_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>-->



</LinearLayout>