<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    style="@style/AppSystemBar"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA">

        <ImageView
            android:id="@+id/activity_cluefilter_back"
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="线索跟踪查询"
            android:textColor="@color/white"
            android:textSize="@dimen/activtiy_header_text_size" />

        <ImageView
            android:id="@+id/activity_cluefilter_confirm"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/determination_selector" />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:background="#2666"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#fff">

                <TextView
                    android:id="@+id/activity_cluefilter_tv_name"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="线索姓名"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/activity_cluefilter_et_name"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/appOrange"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#fff">


                <TextView
                    android:id="@+id/activity_cluefilter_tv_phone"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="线索电话"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/activity_cluefilter_et_phone"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/appOrange"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/activity_cluefilter_tv_empName"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="电销员"
                    android:textSize="18sp" />

                <AutoCompleteTextView
                    android:id="@+id/activity_cluefilter_et_empName"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:background="#00ffffff"
                    android:completionThreshold="1"
                    android:dropDownWidth="150dp"
                    android:dropDownHeight="200dp"
                    android:hint="请输入"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/appBlack"
                    android:textColorHint="@color/appOrange"
                    android:textSize="18sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:text="是否逾期"
                    android:padding="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/activity_cluefilter_rg_isexpire"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/activity_cluefilter_rb_yes"
                        android:text="是"
                        android:tag="true"
                        android:button="@drawable/pingpaitexin_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:id="@+id/activity_cluefilter_rb_no"
                        android:text="否"
                        android:tag="false"
                        android:layout_marginLeft="20dp"
                        android:button="@drawable/pingpaitexin_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/activity_cluefilter_tv_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:text="客户等级"
                    android:textSize="16sp" />

                <com.tygas.tianyu.tianyu.ui.view.customview.FocuGirdView
                    android:id="@+id/activity_cluefilter_fgv_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:horizontalSpacing="8dp"
                    android:numColumns="3"
                    android:verticalSpacing="8dp"></com.tygas.tianyu.tianyu.ui.view.customview.FocuGirdView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_cluefilter_rl_calltime"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:text="应回访时间从"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_cluefilter_tv_lasttime"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_cluefilter_btn_clearlasttime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/activity_cluefilter_tv_lasttime"
                    android:text="置空"
                    android:padding="20dp"
                    android:textColor="@color/appOrange" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/activity_cluefilter_rl_nexttime"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:text="到"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_cluefilter_tv_lastnext"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:gravity="right"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/activity_cluefilter_btn_clearlastnext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/activity_cluefilter_tv_lastnext"
                    android:text="置空"
                    android:textColor="@color/appOrange" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>