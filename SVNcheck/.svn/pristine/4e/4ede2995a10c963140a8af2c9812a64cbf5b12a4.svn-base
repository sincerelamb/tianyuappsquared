<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="#2666"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <RelativeLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ptcustomers_process_item_name"
            android:text="李飞"
            android:textSize="18sp"
            android:textColor="#c000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ptcustomers_process_item_level"
            android:text="A"
            android:background="@mipmap/level_bg"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ptcustomers_process_item_name"
            android:layout_alignBottom="@id/ptcustomers_process_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ptcustomers_process_item_time"
            android:text="2015-08-26 11:14"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/ptcustomers_process_item_level"
            android:layout_alignBottom="@id/ptcustomers_process_item_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ptcustomers_process_item__next_time_title"
            android:text="下次: "
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ptcustomers_process_item_time"
            android:layout_alignBottom="@id/ptcustomers_process_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ptcustomers_process_item__next_time"
            android:text="2015-08-29"
            android:textColor="#1681b7"
            android:layout_toRightOf="@id/ptcustomers_process_item__next_time_title"
            android:layout_alignBottom="@id/ptcustomers_process_item__next_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ptcustomers_process_item_job"
            android:layout_below="@id/ptcustomers_process_item_name"
            android:text="销售顾问:"
            android:layout_marginTop="16dp"
            android:layout_alignLeft="@id/ptcustomers_process_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ptcustomers_process_item_recode_title"
            android:text="接触记录: "
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ptcustomers_process_item_job"
            android:layout_alignBottom="@id/ptcustomers_process_item_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ptcustomers_process_item_recode"
            android:text="有空来看看"
            android:textColor="#a000"
            android:layout_toRightOf="@id/ptcustomers_process_item_recode_title"
            android:layout_alignTop="@id/ptcustomers_process_item_recode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>