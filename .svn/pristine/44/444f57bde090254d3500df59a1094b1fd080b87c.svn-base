<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/AppSystemBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/title_activity_ptcustomerdetail"
            android:textColor="@color/white"
            android:textSize="@dimen/activtiy_header_text_size" />

        <ImageView
            android:id="@+id/activity_ptcustomersdetail_tv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back" />
    </RelativeLayout>

    <!-- app:tabIndicatorColor 指示器（字体下面的那一个横）显示颜色 -->
    <!-- app:tabSelectedTextColor 选中的字体颜色 -->
    <!-- app:tabTextColor 未选中的字体颜色 -->

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_ptcustomersdetail_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#66d354"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#000000"
        app:tabTextColor="#666"
        >
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_ptcustomersdetail_vp"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>

</LinearLayout>