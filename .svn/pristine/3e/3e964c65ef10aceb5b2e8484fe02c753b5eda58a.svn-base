<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/clue_item_ll_left"
        android:orientation="horizontal"
        android:background="@drawable/ptcustomers_layout_item_lfet_slector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/clue_item_tv_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="#6e6d6d"
                android:textSize="16sp"
                android:text="赵先生"
                android:ellipsize="end"
                android:layout_width="60dp"
                android:singleLine="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/clue_item_tv_phone"
                android:layout_toRightOf="@id/clue_item_tv_name"
                android:layout_alignBottom="@id/clue_item_tv_name"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:maxLength="11"
                android:textColor="#6e6d6d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/clue_item_tv_level"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="C"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                android:textColor="#fff"
                android:background="@mipmap/level_bg"
                android:paddingLeft="6dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/clue_item_tv_level_title"
                android:text="等级:"
                android:textColor="#6e6d6d"
                android:textSize="16sp"
                android:layout_toLeftOf="@id/clue_item_tv_level"
                android:layout_alignBottom="@id/clue_item_tv_level"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/clue_item_tv_lasttime_title"
                android:layout_below="@id/clue_item_tv_name"
                android:layout_alignLeft="@id/clue_item_tv_name"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="最近跟踪:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/clue_item_tv_lasttime"
                android:layout_toRightOf="@id/clue_item_tv_lasttime_title"
                android:layout_alignBottom="@id/clue_item_tv_lasttime_title"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="2015-08-26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/clue_item_tv_nexttime_title"
                android:text="应回访日期:"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/clue_item_tv_lasttime"
                android:layout_alignBottom="@id/clue_item_tv_lasttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/clue_item_tv_nexttime"
                android:text="2015-08-29"
                android:textColor="#ff8b02"
                android:textSize="12sp"
                android:layout_toRightOf="@id/clue_item_tv_nexttime_title"
                android:layout_alignBottom="@id/clue_item_tv_nexttime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/clue_item_tv_lovecar_title"
                android:text="意向车系:"
                android:layout_marginTop="8dp"
                android:layout_below="@id/clue_item_tv_lasttime_title"
                android:layout_alignLeft="@id/clue_item_tv_lasttime_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/clue_item_tv_lovecar"
                android:textColor="#ff8b02"
                android:text="大众辉腾"
                android:layout_toRightOf="@id/clue_item_tv_lovecar_title"
                android:layout_alignBottom="@id/clue_item_tv_lovecar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/clue_item_iv_right"
            android:scaleType="centerCrop"
            android:src="@drawable/genzhongbuchu_selector"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:background="#4666"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

</LinearLayout>
