<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/item_fpcustomers_info"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <TextView
                android:id="@+id/item_fpcustomers_tv_name"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="100dp"
                android:singleLine="true"
                android:text="1111"
                android:textColor="#6e6d6d"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_fpcustomers_tv_phone"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/item_fpcustomers_tv_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/item_fpcustomers_tv_name"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:text="111111"
                android:textColor="#6e6d6d"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_fpcustomers_tv_date_takecar"
                android:layout_width="70dp"
                android:layout_height="23dp"
                android:layout_alignLeft="@id/item_fpcustomers_tv_name"
                android:layout_below="@id/item_fpcustomers_tv_name"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="交车日期:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_fpcustomers_tv_date_takecar_content"
                android:layout_width="150dp"
                android:layout_height="23dp"
                android:layout_alignBottom="@id/item_fpcustomers_tv_date_takecar"
                android:layout_toRightOf="@id/item_fpcustomers_tv_date_takecar"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/appOrange"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_fpcustomers_tv_data_invitation_title"
                android:layout_width="80dp"
                android:layout_height="23dp"
                android:layout_alignLeft="@id/item_fpcustomers_tv_date_takecar"
                android:layout_below="@id/item_fpcustomers_tv_date_takecar"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="应邀约日期:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/item_fpcustomers_tv_data_invitation_content"
                android:layout_width="150dp"
                android:layout_height="23dp"
                android:layout_alignBottom="@id/item_fpcustomers_tv_data_invitation_title"
                android:layout_toRightOf="@id/item_fpcustomers_tv_data_invitation_title"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="13sp" />




            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/item_fpcustomers_tv_talkcontent_title"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@id/item_fpcustomers_tv_data_invitation_title"
                android:layout_below="@id/item_fpcustomers_tv_data_invitation_title"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="邀约洽谈情况:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_fpcustomers_tv_talkcontent"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/item_fpcustomers_tv_talkcontent_title"
                android:layout_toRightOf="@id/item_fpcustomers_tv_talkcontent_title"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/item_fpcustomers_iv_invitation_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/callout"
               />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#3666" />
</LinearLayout>
