<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppSystemBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="天裕汽车一体销售平台"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/main_banner" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/appBlue">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/activity_cpinfo_user_icon"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:onClick="listOnclick"
                        android:scaleType="fitXY"
                        android:src="@mipmap/user" />

                    <TextView
                        android:id="@+id/activity_main_tv_zhanghao"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_main_rl_ptcustomers"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="listOnclick"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pt_customer_selector" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_main_tv_ptcustomers_total_today"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/total_layer"
                        android:gravity="center"
                        android:text="99+"
                        android:padding="2dp"
                        android:minWidth="30dp"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/activity_main_tv_ptcustomers_total_history"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:minWidth="30dp"
                        android:padding="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/total_layer_his"
                        android:gravity="center"
                        android:text="99+"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aaaaaa" />


            <RelativeLayout
                android:id="@+id/activity_main_rl_clue"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:onClick="listOnclick"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/clue_selector" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_main_tv_clue_total_today"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:minWidth="30dp"
                        android:padding="2dp"
                        android:background="@drawable/total_layer"
                        android:gravity="center"
                        android:text="99+"

                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/activity_main_tv_clue_total_history"
                        android:layout_width="wrap_content"
                        android:minWidth="30dp"
                        android:padding="2dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/total_layer_his"
                        android:gravity="center"
                        android:text="99+"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aaaaaa" />

            <RelativeLayout
                android:id="@+id/activity_main_rl_cpcustomers"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:onClick="listOnclick"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cp_customer_selector" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_main_tv_cpcustomers_total_today"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:minWidth="30dp"
                        android:padding="2dp"
                        android:background="@drawable/total_layer"
                        android:gravity="center"
                        android:text="99+"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/activity_main_tv_cpcustomers_total_history"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:minWidth="30dp"
                        android:padding="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/total_layer_his"
                        android:gravity="center"
                        android:text="99+"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#aaaaaa" />

            <TextView
                android:id="@+id/activity_main_tv_exit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/exit_login_seletor"
                android:clickable="true"
                android:gravity="center"
                android:onClick="listOnclick"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
