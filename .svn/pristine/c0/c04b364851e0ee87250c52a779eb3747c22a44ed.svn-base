<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="#2666"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <RelativeLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/clue_process_item_tv_name"
            android:textSize="18sp"
            android:textColor="#c000"
            android:text="ddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/clue_process_item_tv_level"
            android:background="@mipmap/level_bg"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/clue_process_item_tv_name"
            android:layout_alignBottom="@id/clue_process_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/clue_process_item_tv_nexttime_title"
            android:text="预计下次: "
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/clue_process_item_tv_level"
            android:layout_marginLeft="30dp"
            android:layout_alignBottom="@id/clue_process_item_tv_level"
            android:layout_width="wrap_content"
            android:textSize="13dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/clue_process_item_tv_nexttime"
            android:textColor="#1681b7"
            android:textSize="13dp"
            android:layout_toRightOf="@id/clue_process_item_tv_nexttime_title"
            android:layout_alignBottom="@id/clue_process_item_tv_nexttime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/clue_process_item_tv_time_title"
            android:text="接触时间:"
            android:layout_marginTop="8dp"
            android:layout_below="@id/clue_process_item_tv_nexttime_title"
            android:layout_alignLeft="@id/clue_process_item_tv_nexttime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/clue_process_item_tv_time"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/clue_process_item_tv_time_title"
            android:layout_alignBottom="@id/clue_process_item_tv_time_title"
            android:layout_width="wrap_content"
            android:textSize="13dp"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/clue_process_item_tv_job"
            android:layout_below="@id/clue_process_item_tv_name"
            android:text="电销员:"
            android:gravity="bottom"
            android:layout_alignBottom="@id/clue_process_item_tv_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/clue_process_item_recode_title"
            android:text="接触记录: "
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@id/clue_process_item_tv_job"
            android:layout_below="@id/clue_process_item_tv_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/clue_process_item_tv_recode"
            android:textColor="#a000"
            android:layout_toRightOf="@id/clue_process_item_recode_title"
            android:layout_alignTop="@id/clue_process_item_recode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>