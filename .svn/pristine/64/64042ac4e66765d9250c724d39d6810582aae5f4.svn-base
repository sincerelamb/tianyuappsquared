<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/title_activity_clue"
            android:textColor="@color/white"
            android:textSize="@dimen/activtiy_header_text_size" />

        <TextView
            android:id="@+id/activtiy_clue_tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:text="@string/filter"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="#FF8B00" />

    </RelativeLayout>


    <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
        android:id="@+id/activity_ptcustomers_rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        ></com.marshalchen.ultimaterecyclerview.UltimateRecyclerView>



</LinearLayout>