<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppSystemBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.tygas.tianyu.tianyu.ui.view.activity.CpCustomActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA">

        <ImageView
            android:id="@+id/activtiy_cpcustomers_back"
            android:scaleType="centerCrop"
            android:background="@mipmap/back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="补全客户到店列表"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="筛选"
            android:textColor="#FF8B00" />

    </RelativeLayout>
    <com.marshalchen.ultimaterecyclerview.UltimateRecyclerView
        android:id="@+id/activity_cpcustom_ulry_cplist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.marshalchen.ultimaterecyclerview.UltimateRecyclerView>

</LinearLayout>
