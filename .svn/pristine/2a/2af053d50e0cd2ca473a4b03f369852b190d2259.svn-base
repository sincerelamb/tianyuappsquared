<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppSystemBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.activity.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA"
        android:gravity="center"
        android:text="天裕汽车一体销售平台"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/main_banner" />

    <ImageView
        android:id="@+id/activity_main_iv_ptcustomers"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="listOnclick"
        android:scaleType="centerCrop"
        android:src="@drawable/pt_customer_selector"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aaaaaa" />


    <ImageView
        android:id="@+id/activity_main_iv_clue"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/clue_selector"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aaaaaa" />

    <ImageView
        android:id="@+id/activity_main_iv_cp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="listOnclick"
        android:scaleType="centerCrop"
        android:src="@drawable/cp_customer_selector" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aaaaaa" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff" />


</LinearLayout>
