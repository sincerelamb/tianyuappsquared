<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/item_ptcustomers_rl_left"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:background="@drawable/ptcustomers_layout_item_lfet_slector"
            android:padding="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_ptcustomers_tv_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="#6e6d6d"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_ptcustomers_tv_phone"
                android:layout_toRightOf="@id/item_ptcustomers_tv_name"
                android:layout_alignBottom="@id/item_ptcustomers_tv_name"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:maxLength="11"
                android:textColor="#6e6d6d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/item_ptcustomers_tv_level"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                android:layout_marginLeft="4dp"
                android:textColor="#fff"
                android:background="@mipmap/level_bg"
                android:paddingLeft="6dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_ptcustomers_tv_level_title"
                android:text="等级:"
                android:textColor="#6e6d6d"
                android:textSize="16sp"
                android:layout_toLeftOf="@id/item_ptcustomers_tv_level"
                android:layout_alignBottom="@id/item_ptcustomers_tv_level"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/item_ptcustomers_tv_recent_time_title"
                android:layout_below="@id/item_ptcustomers_tv_name"
                android:layout_alignLeft="@id/item_ptcustomers_tv_name"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="最近跟踪:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_ptcustomers_tv_recent_time"
                android:layout_toRightOf="@id/item_ptcustomers_tv_recent_time_title"
                android:layout_alignBottom="@id/item_ptcustomers_tv_recent_time_title"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_ptcustomers_tv_callbacktime_title_title"
                android:text="应回访日期:"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_below="@id/item_ptcustomers_tv_recent_time_title"
                android:layout_alignLeft="@id/item_ptcustomers_tv_recent_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_ptcustomers_tv_callbacktime_title"
                android:textColor="#ff8b02"
                android:textSize="12sp"
                android:layout_toRightOf="@id/item_ptcustomers_tv_callbacktime_title_title"
                android:layout_alignBottom="@id/item_ptcustomers_tv_callbacktime_title_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_ptcustomers_tv_love_car_title"
                android:text="意向车系:"
                android:layout_marginTop="8dp"
                android:layout_below="@id/item_ptcustomers_tv_callbacktime_title_title"
                android:layout_alignLeft="@id/item_ptcustomers_tv_callbacktime_title_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_ptcustomers_tv_love_car_name"
                android:textColor="#ff8b02"
                android:layout_toRightOf="@id/item_ptcustomers_tv_love_car_title"
                android:layout_alignBottom="@id/item_ptcustomers_tv_love_car_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_ptcustomers_tv_record_title"
                android:text="洽谈记录:"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/item_ptcustomers_tv_love_car_title"
                android:layout_alignLeft="@id/item_ptcustomers_tv_love_car_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_ptcustomers_tv_record_content"
                android:layout_toRightOf="@id/item_ptcustomers_tv_record_title"
                android:layout_alignTop="@id/item_ptcustomers_tv_record_title"
                android:textSize="12sp"
                android:maxLength="20"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_ptcustomers_iv_right"
            android:src="@drawable/callout"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#3666"
        />

</LinearLayout>


