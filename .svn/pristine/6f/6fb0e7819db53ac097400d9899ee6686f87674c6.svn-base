package com.tygas.tianyu.tianyu.ui.view.fragment;

import android.os.Bundle;
import android.support.annotation.Nullable;
import android.support.v4.app.Fragment;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.Button;
import android.widget.ListView;

import com.tygas.tianyu.tianyu.R;
import com.tygas.tianyu.tianyu.ui.adapter.CustomersProcessAdapter;
import com.tygas.tianyu.tianyu.ui.model.CustomerProcess;

import java.util.ArrayList;

/**
 * Created by SJTY_YX on 2016/1/20.
 */
public class CustomersProcessFragment extends Fragment {


    private View root;
    private ListView listView;
    private ArrayList<CustomerProcess> data;
    private CustomersProcessAdapter adapter;
    private Button footer;

    @Nullable
    @Override
    public View onCreateView(LayoutInflater inflater, ViewGroup container, Bundle savedInstanceState) {
        View view = inflater.inflate(R.layout.fragment_ptcustomers_process, null);
        listView = (ListView) view.findViewById(R.id.fragment_ptcustomers_process_lv);
        footer = new Button(container.getContext());
        footer.setText("回访播出");
        listView.addFooterView(footer);
        initData();
        return view;
    }

    private void initData() {
        data = new ArrayList<>();
        for(int i=0;i<4;i++){
            CustomerProcess customerProcess = new CustomerProcess("xx_"+i);
            data.add(customerProcess);
        }
        adapter = new CustomersProcessAdapter(data);
        listView.setAdapter(adapter);
    }//end init tData
}
