    @Override
    public void onClick(View v) {
        switch (v.getId()){
            case R.id.frgment_customersinfo_bt_callout://电话播出
                Toast.makeText(getActivity(),"开始录音",Toast.LENGTH_SHORT).show();
                Date date=new Date();
                DateFormat format=new SimpleDateFormat("HH_mm_ss");
                String time=format.format(date);
                phonStateLisen.setPhoneNumber(time);
                Uri uri = Uri.parse("tel:"+customer.getCustomerPhone());
                Intent call = new Intent(Intent.ACTION_CALL, uri); //直接播出电话
                phonStateLisen.setNowCostomer(customer);
                phonStateLisen.setRecordPath(new RecordFile(activity,time).getFilePath());
                phonStateLisen.setFlag(true);
                getActivity().startActivity(call);
                break;
        }
    }

