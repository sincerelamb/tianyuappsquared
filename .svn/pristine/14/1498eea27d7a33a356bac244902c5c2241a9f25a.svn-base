<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    style="@style/AppSystemBar"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA">

        <ImageView
            android:id="@+id/activtiy_ptcustomersfilter_back"
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/title_activity_ptcustomerfilter"
            android:textColor="@color/white"
            android:textSize="@dimen/activtiy_header_text_size" />

        <ImageView
            android:id="@+id/activity_ptcustomersfilter_tv_confirm"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:gravity="center"
            android:src="@drawable/determination_selector" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:background="#2666"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/activity_ptcustomersfilter_et_name"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    android:hint="客户姓名"
                    android:maxLength="10"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/activity_ptcustomersfilter_et_phone"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    android:hint="客户电话"
                    android:maxLength="15"
                    android:inputType="phone"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/activity_ptcustomersfilter_et_empName"
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    android:hint="员工姓名"
                    android:maxLength="10"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="客户等级"
                    android:padding="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <com.tygas.tianyu.tianyu.ui.view.customview.FocuGirdView
                    android:id="@+id/activity_ptcustomersfilter_fgv_level"
                    android:numColumns="3"
                    android:layout_weight="2"
                    android:horizontalSpacing="8dp"
                    android:verticalSpacing="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </com.tygas.tianyu.tianyu.ui.view.customview.FocuGirdView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_ptcustomersfilter_rl_lasttime"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:text="应访问时间从"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:text="2015-09-21"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/activity_ptcustomersfilter_rl_nexttime"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:text="到"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#000"
                    android:layout_alignParentRight="true"
                    android:text="2015-09-21"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>