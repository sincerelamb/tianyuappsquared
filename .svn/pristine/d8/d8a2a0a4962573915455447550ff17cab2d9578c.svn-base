<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:padding="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_cpcustomers_tv_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="#6e6d6d"
                android:textSize="16sp"
                android:text="赵先生"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_cpcustomers_tv_phone"
                android:layout_toRightOf="@id/item_cpcustomers_tv_name"
                android:layout_alignBottom="@id/item_cpcustomers_tv_name"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="#6e6d6d"
                android:text="15166788899"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_cpcustomers_tv_date"
                android:text="求店日期:"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/item_cpcustomers_tv_name"
                android:layout_alignLeft="@id/item_cpcustomers_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_cpcustomers_tv_record_content"
                android:layout_toRightOf="@id/item_cpcustomers_tv_date"
                android:layout_alignBottom="@id/item_cpcustomers_tv_date"
                android:textSize="10sp"
                android:text="2015-12-02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_cpcustomers_tv_time_title"
                android:layout_below="@id/item_cpcustomers_tv_date"
                android:layout_alignLeft="@id/item_cpcustomers_tv_date"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:text="来店时间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_cpcustomers_tv_time_content"
                android:layout_toRightOf="@id/item_cpcustomers_tv_time_title"
                android:layout_alignBottom="@id/item_cpcustomers_tv_time_title"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:text="12:29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_cpcustomers_tv_time_shop_title"
                android:text="离店时间:"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:layout_toRightOf="@id/item_cpcustomers_tv_time_content"
                android:layout_alignBottom="@id/item_cpcustomers_tv_time_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_cpcustomers_tv_time_shop_content"
                android:text="15:24"
                android:textColor="#ff8b02"
                android:textSize="10sp"
                android:layout_toRightOf="@id/item_cpcustomers_tv_time_shop_title"
                android:layout_alignBottom="@id/item_cpcustomers_tv_time_shop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/item_cpcustomers_tv_sales_consultant_title"
                android:text="销售顾问:"
                android:layout_marginTop="8dp"
                android:layout_below="@id/item_cpcustomers_tv_time_title"
                android:layout_alignLeft="@id/item_cpcustomers_tv_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_cpcustomers_tv_sales_consultant_name"
                android:textColor="#ff8b02"
                android:layout_marginLeft="5dp"
                android:text="程杰"
                android:layout_toRightOf="@id/item_cpcustomers_tv_sales_consultant_title"
                android:layout_alignBottom="@id/item_cpcustomers_tv_sales_consultant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/item_cpcustomers_iv_info_pic"
            android:src="@drawable/cp_info_selector"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#3666"
        />

</LinearLayout>