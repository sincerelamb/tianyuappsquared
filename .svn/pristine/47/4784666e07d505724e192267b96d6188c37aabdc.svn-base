<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppSystemBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#327ECA">

        <ImageView
            android:id="@+id/activtiy_ptcustomersfilter_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/activity_ptcustomersfilter_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/title_activity_ptcustomerfilter"
            android:textColor="@color/white"
            android:textSize="@dimen/activtiy_header_text_size" />

        <ImageView
            android:id="@+id/activity_ptcustomersfilter_tv_confirm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/determination_selector" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2666"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#fff">

                <TextView
                    android:id="@+id/activity_ptcustomersfilter_tv_name"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="客户姓名"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/activity_ptcustomersfilter_et_name"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/appOrange"
                    android:textSize="18sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#fff">


                <TextView
                    android:id="@+id/activity_ptcustomersfilter_tv_phone"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="客户电话"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/activity_ptcustomersfilter_et_phone"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="@color/appOrange"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/activity_ptcustomersfilter_tv_empName"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="销售顾问"
                    android:textSize="18sp" />

                <AutoCompleteTextView
                    android:id="@+id/activity_ptcustomersfilter_et_empName"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:background="#00ffffff"
                    android:completionThreshold="1"
                    android:dropDownWidth="150dp"
                    android:dropDownHeight="200dp"
                    android:hint="请输入"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/appBlack"
                    android:textColorHint="@color/appOrange"
                    android:textSize="18sp" />





            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="20dp"
                    android:text="是否逾期"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/activity_ptcustomersfilter_rg_isexpire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/activity_ptcustomersfilter_rb_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/pingpaitexin_selector"
                        android:tag="true"
                        android:text="是" />

                    <CheckBox
                        android:id="@+id/activity_ptcustomersfilter_rb_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:button="@drawable/pingpaitexin_selector"
                        android:tag="false"
                        android:text="否" />

                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/activity_ptcustomersfilter_tv_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:text="客户等级"
                    android:textSize="16sp" />

                <com.tygas.tianyu.tianyu.ui.view.customview.FocuGirdView
                    android:id="@+id/activity_ptcustomersfilter_fgv_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:horizontalSpacing="8dp"
                    android:numColumns="3"
                    android:verticalSpacing="8dp"></com.tygas.tianyu.tianyu.ui.view.customview.FocuGirdView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activity_ptcustomersfilter_rl_lasttime"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/activity_ptcustomersfilter_tv_begintime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="应回访时间从"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activity_ptcustomers_tv_lasttime"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_ptcustomers_btn_clearlasttime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/activity_ptcustomers_tv_lasttime"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="置空"
                    android:textColor="@color/appOrange" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/activity_ptcustomersfilter_rl_nexttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="到"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activity_ptcustomers_tv_nexttime"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_ptcustomers_btn_clearnexttime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/activity_ptcustomers_tv_nexttime"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="置空"
                    android:textColor="@color/appOrange" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>