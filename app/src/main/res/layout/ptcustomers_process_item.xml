<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="#2666"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <RelativeLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ptcustomers_process_item_name"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="#c000"
            android:ellipsize="end"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ptcustomers_process_item_level"
            android:background="@mipmap/level_bg"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ptcustomers_process_item_name"
            android:layout_alignBottom="@id/ptcustomers_process_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <TextView
            android:id="@+id/ptcustomers_process_item__next_time_title"
            android:text="预计下次: "
            android:layout_toRightOf="@id/ptcustomers_process_item_level"
            android:layout_alignBottom="@id/ptcustomers_process_item_level"
            android:layout_marginLeft="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ptcustomers_process_item__next_time"
            android:textColor="#1681b7"
            android:layout_toRightOf="@id/ptcustomers_process_item__next_time_title"
            android:layout_alignBottom="@id/ptcustomers_process_item__next_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





        <TextView
            android:id="@+id/ptcustomers_process_item_job"
            android:text="销售顾问:"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_below="@id/ptcustomers_process_item_name"
            android:layout_alignLeft="@id/ptcustomers_process_item_name"
            android:gravity="bottom"
            android:singleLine="true"
            android:layout_width="110dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/ptcustomers_process_item_time_title"
            android:layout_toRightOf="@id/ptcustomers_process_item_job"
            android:layout_alignBottom="@id/ptcustomers_process_item_job"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:text="接触时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/ptcustomers_process_item_time"
            android:layout_marginLeft="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toRightOf="@id/ptcustomers_process_item_time_title"
            android:layout_alignBottom="@id/ptcustomers_process_item_time_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/ptcustomers_process_item_recode_title"
            android:text="接触记录: "
            android:layout_below="@id/ptcustomers_process_item_job"
            android:layout_alignLeft="@id/ptcustomers_process_item_job"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ptcustomers_process_item_recode"
            android:textColor="#a000"
            android:layout_toRightOf="@id/ptcustomers_process_item_recode_title"
            android:layout_alignTop="@id/ptcustomers_process_item_recode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>